{{!-- ApplicationV2 Template --}}

<div class="form-section">
  <div class="section-title">Module Configuration</div>
  
  <div class="form-group">
    <label for="v2-example-input">Example Input (V2):</label>
    <input type="text" id="v2-example-input" name="exampleInput" placeholder="Enter some text..." />
  </div>

  <div class="form-group">
    <label for="v2-example-select">Example Select (V2):</label>
    <select id="v2-example-select" name="exampleSelect">
      <option value="">Choose an option...</option>
      <option value="option1">Option 1</option>
      <option value="option2">Option 2</option>
      <option value="option3">Option 3</option>
    </select>
  </div>
</div>

<div class="form-section">
  <div class="section-title">Advanced Settings</div>
  
  <div class="form-group">
    <label for="v2-example-textarea">Example Textarea (V2):</label>
    <textarea id="v2-example-textarea" name="exampleTextarea" rows="3" placeholder="Enter a description..."></textarea>
  </div>

  <div class="form-group">
    <label>
      <input type="checkbox" name="exampleCheckbox" />
      Enable Advanced Features
    </label>
  </div>
</div>

<div class="text-muted text-center">
  This is a template for your Foundry VTT module using ApplicationV2.
  This template uses the modern ApplicationV2 API for enhanced functionality.
</div>

<div class="button-container">
  <button type="button" class="my-button primary">V2 Action</button>
  <button type="submit" class="primary">Save Changes</button>
  <button type="button" onclick="this.close()">Cancel</button>
</div>